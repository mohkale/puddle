{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "chrome": "58"
                }
            }
        ],
        "@babel/preset-react",
        "@babel/preset-typescript"
    ],
    "plugins": [
        "@babel/proposal-object-rest-spread",
        "@babel/plugin-transform-modules-commonjs",
        ["@babel/plugin-proposal-decorators",
            {
                "legacy": true
                // "decoratorsBeforeExport": true
            }
        ],
        ["@babel/plugin-proposal-class-properties",
            {
                 "loose": true
            }
        ]
    ]
}
